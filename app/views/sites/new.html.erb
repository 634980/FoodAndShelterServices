<% provide(:title, 'Add Site') %>
<h1>Add Site</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@site) do |f| %>
      <%= f.label :site_name %>
      <%= f.text_field :site_name %>
      
      <%= f.label :site_address %>
      <%= f.text_field :site_address %>
      
      <%= f.label :city %>
      <%= f.text_field :city %>
      
      <%= f.label :state %>
      <%= f.text_field :state %>
      
      <%= f.label :zipcode %>
      <%= f.text_field :zipcode %>
      
      <%= f.label :site_contact_number %>
      <%= f.text_field :site_contact_number %>

      <%= f.submit "Add Site into the system", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>