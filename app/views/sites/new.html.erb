<% provide(:title, 'Add Site') %>
<h1>Add Site</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@site) do |f| %>
    <%= render 'shared/error_messages_site' %>
    
      <%= f.label :site_name %>
      <%= f.text_field :site_name, class: 'form-control' %>
      
      <%= f.label :site_address %>
      <%= f.text_field :site_address, class: 'form-control' %>
      
      <%= f.label :city %>
      <%= f.text_field :city, class: 'form-control' %>
      
      <%= f.label :state %>
      <%= f.text_field :state, class: 'form-control' %>
      
      <%= f.label :zipcode %>
      <%= f.text_field :zipcode, class: 'form-control' %>
      
      <%= f.label :site_contact_number %>
      <%= f.text_field :site_contact_number, class: 'form-control' %>

      <%= f.submit "Add", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>