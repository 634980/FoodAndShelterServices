<% provide(:title, 'Client List') %>
<h1>Clients List</h1>
<%= image_tag("client.png", alt: "Image", height: "350px", width: "500px", :align => "middle") %>
<ul class="users">
  <% @clients.each do |client| %>
    <li>
      <%= link_to client.full_name, client %>
      | <%= link_to "Delete", client, method: :delete,
                                  data: { confirm: "Are You sure you want to delete this client?" } %>
    </li>
  <% end %>
</ul>