<% provide(:title, 'Add Client') %>
<h1>Add Client</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@client) do |f| %>
      <%= f.label :full_name %>
      <%= f.text_field :full_name %>
      
      <%= f.label :phone_number %>
      <%= f.text_field :phone_number %>

      <%= f.submit "Add client to the system", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>